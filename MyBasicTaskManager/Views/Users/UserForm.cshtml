@model MyBasicTaskManager.Models.UserFormViewModel
@using (Html.BeginForm("UserForm", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true);
    @Html.HiddenFor(model => model.User.Id)
    @Html.HiddenFor(model => model.IsExisting)
    <div class="row mt-4 mb-4">
        <div class="col-4">
            <div class="form-gorup">
                @Html.LabelFor(model => model.User.Username, new { @class = "", @for = "Name" })
                @Html.TextBoxFor(model => model.User.Username, new { @class = "form-control", @placeholder = "", @id = "Name" })
                @Html.ValidationMessageFor(model => model.User.Username)
            </div>
        </div>
        <div class="col-4">
            <div class="form-gorup">
                @Html.LabelFor(model => model.User.Email, new { @class = "", @for = "Rank" })
                @Html.TextBoxFor(model => model.User.Email, new { @class = "form-control", @placeholder = "", @id = "Email" })
                @Html.ValidationMessageFor(model => model.User.Email)
            </div>
        </div>
        @if(Model.User.IsAdmin)
        {
            @Html.HiddenFor(model => model.User.IsAdmin);
        }
        else
        {
        <div class="col-4">
            <div class="form-gorup" style="padding-top:38px;">
                @Html.CheckBoxFor(model => model.User.IsAdmin, new { @class = "", @placeholder = "", @id = "Admin" })
                <label for="Status">User has administrator role</label>
            </div>
        </div>
        }
    </div>
    <div class="row">
        <div class="col-12" style="text-align:right">
            @Html.ActionLink("Back", "Index", "Users", routeValues: new { }, htmlAttributes: new { @class = "btn btn-primary" })
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}
<script>

</script>
