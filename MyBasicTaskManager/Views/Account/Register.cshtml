@model MyBasicTaskManager.Models.RegisterViewModel
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
    @Html.AntiForgeryToken()
    <i class="fa fa-diamond mb-4" style="font-size:72px;"></i>
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
    @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email address" })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "margin-bottom:0px !Important", @placeholder = "Password" })
    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control",  @placeholder = "Confirm Password" })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    <p>
        @Html.ActionLink("Sign in", "Login")
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
